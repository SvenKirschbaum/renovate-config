{
  "extends": [
    "config:best-practices"
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "timezone": "Europe/Berlin",
  "rebaseWhen": "conflicted",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "on sunday",
    "addLabels": [
      "maintenance"
    ]
  },
  "transitiveRemediation": true,
  "vulnerabilityAlerts": {
    "addLabels": ["security"]
  },
  "hostRules": [
    {
      "matchHost": "docker.io",
      "hostType": "docker",
      "username": "fallobst22",
      "password": "{{ secrets.DOCKER_TOKEN }}"
    },
    {
      "matchHost": "registry.gitlab.com",
      "hostType": "docker",
      "username": "fallobst22",
      "password": "{{ secrets.GITLAB_TOKEN }}"
    }
  ],
  "major": {
    "addLabels": [
      "major"
    ]
  },
  "minor": {
    "addLabels": [
      "minor"
    ]
  },
  "patch": {
    "addLabels": [
      "patch"
    ]
  },
  "digest": {
    "addLabels": [
      "digest"
    ]
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "schedule": "on saturday"
    },
    {
      "groupName": "oidc-client-ts",
      "matchPackageNames": [
        "oidc-client-ts",
        "react-oidc-context"
      ]
    },
    {
      "matchPackagePatterns": ["^@aws-cdk\/.*-alpha$"],
      "ignoreUnstable": false
    },
    {
      "matchPackageNames": ["ingress-nginx"],
      "allowedVersions": "<4.10.1 || >4.11.0"
    },
    {
      "packagePatterns": ["^lscr.io\\/linuxserver\\/"],
      "versioning": "regex:^(?<compatibility>.*?)-(?<major>v?\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)[\\.-]*r?(?<build>\\d+)*-*r?(?<release>\\w+)*"
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": ["minor"],
      "groupName": "typescript",
      "groupSlug": "typescript"
    },
    {
      "matchPackageNames": ["docker.io/envoyproxy/gateway-helm"],
      "pinDigests": false
    },
    {
      "matchDepNames": "k3s",
      "groupName": null,
      "groupSlug": null
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)kustomization\\.ya?ml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\W+.*releases\\\/download\\\/(?<currentValue>.*)\\\/"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": ["system-upgrade-plan/plan.yaml"],
      "matchStrings": ["\\s+version:\\s*(?<currentValue>\\S+)"],
      "depNameTemplate": "k3s",
      "versioningTemplate": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?<compatibility>\\+k3s)(?<build>\\d+)$",
      "datasourceTemplate": "custom.k3s"
    }
  ],
  "customDatasources": {
    "k3s": {
      "defaultRegistryUrlTemplate": "https://update.k3s.io/v1-release/channels",
      "transformTemplates": [
        "{\"releases\":[{\"version\": $$.(data[id = 'stable'].latest),\"sourceUrl\":\"https://github.com/k3s-io/k3s\",\"changelogUrl\":$join([\"https://github.com/k3s-io/k3s/releases/tag/\",data[id = 'stable'].latest])}],\"sourceUrl\": \"https://github.com/k3s-io/k3s\",\"homepage\": \"https://k3s.io/\"}"
      ]
    }
  }
}
