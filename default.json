{
  "extends": [
    "config:base"
  ],
  "rebaseWhen": "conflicted",
  "lockFileMaintenance": {
    "enabled": true,
    "groupName": "all non-major dependencies",
    "groupSlug": "all-minor-patch",
    "schedule": "on sunday",
    "commitMessageAction": "Update",
    "addLabels": [
      "maintenance"
    ]
  },
  "transitiveRemediation": true,
  "vulnerabilityAlerts": {
    "addLabels": ["security"]
  },
  "major": {
    "addLabels": [
      "major"
    ]
  },
  "minor": {
    "addLabels": [
      "minor"
    ]
  },
  "patch": {
    "addLabels": [
      "patch"
    ]
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "schedule": "on sunday"
    }
  ]
}
